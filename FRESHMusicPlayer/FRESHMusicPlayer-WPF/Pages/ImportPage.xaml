<UserControl x:Class="FRESHMusicPlayer.Pages.ImportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FRESHMusicPlayer.Pages"
      xmlns:resx = "clr-namespace:FRESHMusicPlayer.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="372" d:DesignWidth="694"
      DragEnter="Page_DragEnter" Drop="Page_Drop" AllowDrop="True">

    <ScrollViewer Background="{DynamicResource BackgroundColor}">
        <StackPanel Margin="10" Width="300" HorizontalAlignment="Left">
            <TextBlock Text="History" Foreground="{DynamicResource PrimaryTextColor}" FontSize="20" FontWeight="Bold"/>
            <TextBlock Text="lol pretend there's stuff here" Margin="0,40,0,40" Foreground="{DynamicResource PrimaryTextColor}"/>

            <TextBlock Text="Import" Foreground="{DynamicResource PrimaryTextColor}" FontSize="20" FontWeight="Bold"/>
            <Button x:Name="BrowseTracksButton" Content="{x:Static resx:Resources.IMPORT_BROWSE_TRACKS}" Margin="0,5,5,5" TextBlock.FontSize="16" Click="BrowseTracksButton_Click"/>
            <Button x:Name="BrowsePlaylistsButton" Content="{x:Static resx:Resources.IMPORT_BROWSE_PLAYLIST}" Margin="0,5,5,5" TextBlock.FontSize="16" Click="BrowsePlaylistsButton_Click"/>
            <Button x:Name="BrowseFoldersButton" Content="{x:Static resx:Resources.IMPORT_BROWSE_FOLDERS}" Margin="0,5,5,5" TextBlock.FontSize="16" Click="BrowseFoldersButton_Click"/>
            <TextBlock x:Name="FilePathHint" Foreground="{DynamicResource PrimaryTextColor}" FontSize="14" Text="{x:Static resx:Resources.IMPORT_MANUALENTRY}" Margin="0,5,0,0"/>
            <DockPanel>
                <Button x:Name="TextBoxButton" DockPanel.Dock="Right" Content="{x:Static resx:Resources.MAINWINDOW_IMPORT}" Margin="5" Padding="5,0" Click="TextBoxButton_Click"/>
                <TextBox x:Name="FilePathBox" AutomationProperties.HelpText="{x:Static resx:Resources.IMPORT_MANUALENTRY}" Background="{x:Null}" Foreground="{DynamicResource PrimaryTextColor}" CaretBrush="{DynamicResource PrimaryTextColor}" Margin="0,2,5,2" FontSize="16" TextWrapping="Wrap"/>
                
            </DockPanel>
        </StackPanel>
    </ScrollViewer>
    
